{
  "name": "fastify-mcp",
  "version": "0.0.1",
  "description": "Fastify adapter for MCP",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.base.json",
    "lint": "eslint --cache",
    "lint:fix": "eslint --cache --fix",
    "typecheck": "tsc -p . --noEmit",
    "test": "node --no-warnings --test 'test/**/*.test.ts'",
    "ci": "npm run build && npm run lint && npm run test:ci"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mcollina/fastify-mcp.git"
  },
